<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - ТМ</title>

    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" href="~/lib/jqgrid/css/ui.jqgrid-bootstrap4.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <script type="text/ecmascript" src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    <script type="text/javascript" src="~/jszip/jszip.js" language="javascript"></script>
    <script type="text/ecmascript" src="~/lib/jqgrid/js/jquery.jqGrid.js"></script>
    <script type="text/ecmascript" src="~/lib/jqgrid/js/i18n/grid.locale-ru.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#navbar a').click(function (e) {
                e.preventDefault();
                $(this).tab('show');
                var grid = $('#' + $(this).attr("aria-controls") + ' .ui-jqgrid-view table').last().jqGrid("setGridWidth", 1140);
                var id = $(grid).attr("id");
                $('#' + id).jqGrid("setGridWidth", 1140);
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)


</head>
<body>


    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Оборудование</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="#home-tab-1" aria-controls="home-tab-1" data-toggle="tab">Модем GSM-M</a></li>
                    <li><a href="#home-tab-2" aria-controls="home-tab-2" data-toggle="tab">АСДУ ТМ-mini</a></li>
                    <li><a href="#home-tab-3" aria-controls="home-tab-3" data-toggle="tab">АСДУ ТМ-3</a></li>
                    <li><a href="#home-tab-4" aria-controls="home-tab-4" data-toggle="tab">АСДУ ТМ-4</a></li>
                    <li><a href="#home-tab-5" aria-controls="home-tab-5" data-toggle="tab">АСДУ ТМ-5</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
            @RenderBody()
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - ООО Техника мониторинга
        </div>
    </footer>
</body>
</html>
