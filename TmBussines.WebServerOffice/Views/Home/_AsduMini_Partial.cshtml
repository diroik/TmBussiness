
<div style="margin-top:30px;width:100%;">
    <table id="jqGrid2"></table>
    <div id="jqGridPager2"></div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#jqGrid2").jqGrid({
            regional: 'ru',
            url: '@Url.Action("GetAsduMiniData","Home")',
            mtype: "GET",
            datatype: "json",
            loadonce: true,
            colModel: [
                { label: 'Дата производства', name: 'dateStamp' },
                { label: 'Серийный №', name: 'asduPartNumber' },
                { label: 'МАС-lan', name: 'mac1char' }
            ],
            viewrecords: true,
            autowidth: true,
            shrinkToFit: true,
            rownumbers: true, // show row numbers
            height: 500,
            rowNum: 100,
            rowList: [50, 100, 500, 1000],
            altRows: true,
            pager: "#jqGridPager2",
        });

        // add navigation bar with some built in actions for the grid
        $('#jqGrid2').navGrid('#jqGridPager2',
            {
                edit: false,
                add: false,
                del: false,
                search: true,
                refresh: true,
                searchtext: "Найти",
                refreshtext: "Обновить",
                view: true,
                position: "left",
                //cloneToTop: false,
                closeAfterSearch: true
            });
        $('#jqGrid2').navButtonAdd('#jqGridPager2',
            {
                buttonicon: "ui-icon-save",
                title: "Export to Excel",
                caption: "Excel",
                position: "last",
                onClickButton: excelButtonClicked2
            });
    });

    function excelButtonClicked2(e) {
        var options = {
            includeLabels: true,
            includeGroupHeader: true,
            includeFooter: true,
            includeHeader: true,
            fileName: "ASDU_TM-mini_Export.xlsx",
            mimetype: "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet",
            maxlength: 40,
            onBeforeExport: null,
            replaceStr: null,
            customizeData: null,
            loadIndicator: true,
            visibleTreeNodes: false,
            treeindent: ' '
        };

        $("#jqGrid2").jqGrid('exportToExcel', options);
    }

</script>